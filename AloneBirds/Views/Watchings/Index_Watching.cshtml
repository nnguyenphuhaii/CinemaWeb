@model AloneBirds.ViewModel.WatchingUpcommingViewModel
@{

    Layout = "~/Views/Shared/_Layout_movie.cshtml";
}

@foreach (var item in Model.UpcommingMovies)
{
    <div class="main-container">
        <div class="poster-container">
            <a href="#"><img src="@item.Movie.Poster" class="poster" /></a>
        </div>
        <div class="ticket-container">
            <div class="ticket__content">
                <h4 class="ticket__movie-title">@item.Movie.Name</h4>
                <p class="ticket__movie-slogan">
                    @item.ShowTime.DateTime
                </p>
                <button style="background-color: lightpink; border: 0;" class="btn btn-primary mb-2" data-toggle="modal" data-target="#videoModal" data-theVideo="@item.Movie.Trailer">Trailer</button>

                <form action="/Ticket/Index_Ticket/@item.Id" method="get">
                    <button type="submit" class="ticket__buy-btn">Mua Vé</button>
                </form>
            </div>
        </div>
    </div>
}

